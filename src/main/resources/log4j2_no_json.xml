<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    %d{ISO8601} %highlight{%-5level} [%style{%t}{light,blue}] [%cyan{%c{1.}:%L}]: %m, %X%n
                </pattern>>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console-Appender"/>
        </Root>
    </Loggers>
</Configuration>
